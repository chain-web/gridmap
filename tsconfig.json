{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2020",
    "sourceMap": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "react",
    "declarationDir": "types",
    "emitDeclarationOnly": true,

    "types": ["node"],
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "baseUrl": "./src"
  },
}
